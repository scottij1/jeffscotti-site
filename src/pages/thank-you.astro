---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Thank You | Jeff Scotti"
  description="Thank you for contacting Jeff Scotti. Your message has been received."
  type="website">
  <div id="main" class="site-main">
    <div id="main-content" class="single-page-content">
      <div id="primary" class="content-area">
        <div class="page-title">
          <h1>Thank You</h1>
          <div class="page-subtitle">
            <h4>Message Received</h4>
          </div>
        </div>

        <div
          id="content"
          class="page-content site-content single-post"
          role="main"
          aria-label="Thank you message">
          <div class="thank-you-container">
            <div class="thank-you-message" aria-live="polite" role="status">
              <p>
                Thanks for your message! It has been submitted successfully and I'll get back to you
                as soon as possible.
              </p>
              <p class="redirect-message" aria-atomic="true">
                You will be redirected to the home page in <span
                  id="countdown"
                  aria-live="assertive">
                  10
                </span> seconds.
              </p>
              <div class="button-container">
                <a href="/" class="btn" aria-label="Return to home page immediately">
                  Return to Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    let seconds = 10;
    const countdownElement = document.getElementById("countdown");

    const countdownInterval = setInterval(() => {
      seconds--;
      if (countdownElement) {
        countdownElement.textContent = seconds.toString();
      }

      if (seconds <= 0) {
        clearInterval(countdownInterval);
        const announcement = document.createElement("div");
        announcement.setAttribute("aria-live", "assertive");
        announcement.textContent = "Redirecting to home page now";
        document.body.appendChild(announcement);

        // Give screen readers a moment to announce before redirecting
        setTimeout(() => {
          window.location.href = "/";
        }, 500);
      }
    }, 1000);
  });
</script>

<style>
  .thank-you-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 300px;
  }

  .thank-you-message {
    text-align: center;
    max-width: 600px;
    padding: 40px;
    background-color: rgba(40, 40, 40, 0.5);
    border-radius: 8px;
  }

  .thank-you-message p {
    font-size: 18px;
    margin-bottom: 20px;
  }

  .redirect-message {
    font-size: 16px;
    color: #f8f8f8;
    background-color: rgba(60, 60, 60, 0.7);
    padding: 10px;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  #countdown {
    font-weight: bold;
    font-size: 18px;
  }

  .button-container {
    margin-top: 20px;
  }
</style>
