                  <div class="portfolio-item-img">
                    <div class="portfolio-item-preview"></div>
                    <a href="#" class="project-link"></a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h4 class="name">Portfolio Template</h4>
                  <span class="category"
                    >A customizable portfolio template for creative
                    professionals.</span
                  >
                  <div class="project-tags">
                    <span>HTML5</span>
                    <span>CSS3</span>
                    <span>JavaScript</span>
                  </div>
                </figure>

                <!-- Portfolio Item 3 -->
                <figure
                  class="item"
                  data-groups='["all", "web-development", "ui-design"]'
                >
                  <div class="portfolio-item-img">
                    <div class="portfolio-item-preview"></div>
                    <a href="#" class="project-link"></a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h4 class="name">Weather App</h4>
                  <span class="category"
                    >A weather application with real-time data and forecast
                    visualization.</span
                  >
                  <div class="project-tags">
                    <span>Vue.js</span>
                    <span>API Integration</span>
                    <span>CSS Grid</span>
                  </div>
                </figure>

                <!-- Portfolio Item 4 -->
                <figure class="item" data-groups='["all", "mobile-apps"]'>
                  <div class="portfolio-item-img">
                    <div class="portfolio-item-preview"></div>
                    <a href="#" class="project-link"></a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h4 class="name">Task Management App</h4>
                  <span class="category"
                    >A productivity tool for organizing and tracking tasks and
                    projects.</span
                  >
                  <div class="project-tags">
                    <span>React</span>
                    <span>Firebase</span>
                    <span>Material UI</span>
                  </div>
                </figure>

                <!-- Portfolio Item 5 -->
                <figure class="item" data-groups='["all", "web-development"]'>
                  <div class="portfolio-item-img">
                    <div class="portfolio-item-preview"></div>
                    <a href="#" class="project-link"></a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h4 class="name">Blog Platform</h4>
                  <span class="category"
                    >A modern blogging platform with content management system.</span
                  >
                  <div class="project-tags">
                    <span>Next.js</span>
                    <span>GraphQL</span>
                    <span>Tailwind CSS</span>
                  </div>
                </figure>

                <!-- Portfolio Item 6 -->
                <figure class="item" data-groups='["all", "ui-design"]'>
                  <div class="portfolio-item-img">
                    <div class="portfolio-item-preview"></div>
                    <a href="#" class="project-link"></a>
                  </div>
                  <i class="far fa-file-alt"></i>
