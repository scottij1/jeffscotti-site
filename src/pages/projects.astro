---
import Layout from "../layouts/Layout.astro";
import ProjectView from "../components/ProjectView.astro";

const SHOW_FILTER_MENU = false;
---

<Layout
  title="Portfolio & Projects | Jeff Scotti - Front End Engineer & UI/UX Designer"
  description="Explore Jeff Scotti's portfolio of web development projects, UI designs, and mobile applications showcasing expertise in React, Vue.js, and modern web technologies."
  type="website"
  keywords={[
    "Jeff Scotti Portfolio",
    "Web Development Projects",
    "UI Design Portfolio",
    "React Projects",
    "Vue.js Applications",
    "Mobile App Development",
    "Front End Portfolio",
    "UI/UX Case Studies",
    "JavaScript Projects",
  ]}>
  <div id="main" class="site-main">
    <div id="main-content" class="single-page-content">
      <div id="primary" class="content-area">
        <div class="page-title">
          <h1>Projects</h1>
          <div class="page-subtitle">
            <h2>Some of my work</h2>
          </div>
        </div>

        <div id="content" class="page-content site-content single-post" role="main">
          <div class="row">
            <div class="col-xs-12 col-sm-12">
              {
                SHOW_FILTER_MENU && (
                  <ul class="portfolio-filters">
                    <li class="active">
                      <a class="filter btn btn-sm btn-link" data-group="all">
                        All
                      </a>
                    </li>
                    <li>
                      <a class="filter btn btn-sm btn-link" data-group="web-development">
                        Web Development
                      </a>
                    </li>
                    <li>
                      <a class="filter btn btn-sm btn-link" data-group="ui-design">
                        UI Design
                      </a>
                    </li>
                    <li>
                      <a class="filter btn btn-sm btn-link" data-group="mobile-apps">
                        Mobile Apps
                      </a>
                    </li>
                  </ul>
                )
              }

              <!-- Portfolio Grid -->
              <div class="portfolio-grid">
                <!-- Portfolio Item 1: Modalis -->
                <figure class="item" data-groups='["all", "web-development", "ui-design"]'>
                  <div class="portfolio-item-img">
                    <img
                      src="/images/portfolio/project-modalis.jpg"
                      alt="Modalis - Media Asset Management and Distribution"
                    />
                    <a
                      href="#"
                      class="project-link"
                      data-project="project-modalis"
                      aria-label="View Modalis project details">
                    </a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h3 class="name">Modalis</h3>
                  <span class="category">Media Asset Management and Distribution System</span>
                  <div class="project-tags">
                    <span>Web Application</span>
                    <span>UI/UX Design</span>
                    <span>JavaScript</span>
                  </div>
                </figure>

                <!-- Portfolio Item 2: Transcript Editor -->
                <figure class="item" data-groups='["all", "web-development"]'>
                  <div class="portfolio-item-img">
                    <img
                      src="/images/portfolio/project-transcript-edit.jpg"
                      alt="Closed Caption Transcript Editor"
                    />
                    <a
                      href="#"
                      class="project-link"
                      data-project="project-transcript-editor"
                      aria-label="View Closed Caption Transcript Editor project details">
                    </a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h3 class="name">Closed Caption Transcript Editor</h3>
                  <span class="category">
                    Web-based tool for editing video transcripts and captions
                  </span>
                  <div class="project-tags">
                    <span>Web Application</span>
                    <span>Video Processing</span>
                    <span>Accessibility</span>
                  </div>
                </figure>

                <!-- Portfolio Item 3: Quiz Creator -->
                <figure class="item" data-groups='["all", "web-development", "ui-design"]'>
                  <div class="portfolio-item-img">
                    <img
                      src="/images/portfolio/project-quiz-creator.jpg"
                      alt="Video Quiz Creator"
                    />
                    <a
                      href="#"
                      class="project-link"
                      data-project="project-quiz-creator"
                      aria-label="View Video Quiz Creator project details">
                    </a>
                  </div>
                  <i class="far fa-file-alt"></i>
                  <h3 class="name">Video Quiz Creator</h3>
                  <span class="category">
                    Interactive tool for creating video-based quizzes and assessments
                  </span>
                  <div class="project-tags">
                    <span>Web Application</span>
                    <span>Educational Tech</span>
                    <span>Interactive Media</span>
                  </div>
                </figure>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <ProjectView />
</Layout>

<style>
  /* Portfolio filters */
  .portfolio-filters {
    list-style: none;
    padding: 0;
    margin: 0 0 30px;
    text-align: center;
  }

  .portfolio-filters li {
    display: inline-block;
    margin: 0 2px;
  }

  .portfolio-filters li a {
    display: inline-block;
    color: var(--text-color);
    padding: 5px 12px;
    font-size: 12px;
    text-decoration: none;
    border-radius: 30px;
    transition: all 0.3s ease-in-out;
  }

  .portfolio-filters li.active a,
  .portfolio-filters li a:hover {
    color: #fff;
    background-color: var(--primary-color);
  }

  /* Portfolio grid */
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .item {
    position: relative;
    margin: 0;
    padding: 0;
    background-color: var(--container-bg-color);
    border-radius: 8px;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .portfolio-item-img {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .portfolio-item-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .portfolio-item-preview {
    width: 100%;
    height: 100%;
    background-color: var(--container-bg-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    opacity: 0.6;
    font-size: 1.2rem;
  }

  .portfolio-item-preview::after {
    content: "Project Image";
  }

  .project-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .item i {
    display: none;
  }

  .item h3.name {
    padding: 15px 15px 5px;
    font-size: 16px;
    color: var(--heading-color);
    margin: 0;
  }

  .item span.category {
    display: block;
    padding: 0 15px 15px;
    font-size: 12px;
    color: var(--text-color);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    padding: 0 15px 15px;
  }

  .project-tags span {
    background-color: var(--container-bg-color);
    color: var(--text-color);
    opacity: 0.7;
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 10px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    // Filter functionality
    const filters = document.querySelectorAll(".filter");
    const items = document.querySelectorAll(".item");

    filters.forEach((filter) => {
      filter.addEventListener("click", (e) => {
        e.preventDefault();

        filters.forEach((f) => f.parentElement?.classList.remove("active"));
        filter.parentElement?.classList.add("active");
        const group = filter.getAttribute("data-group") || "all";

        items.forEach((item) => {
          const dataGroups = item.getAttribute("data-groups") || "[]";
          const groups = JSON.parse(dataGroups.replace(/'/g, '"'));

          if (group === "all" || groups.includes(group)) {
            item.style.display = "block";
          } else {
            item.style.display = "none";
          }
        });
      });
    });

    // Project view functionality
    const projectLinks = document.querySelectorAll(".project-link");

    projectLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const projectId = link.getAttribute("data-project");
        if (projectId && typeof window.openProjectView === "function") {
          window.openProjectView(projectId);
        }
      });
    });
  });
</script>
