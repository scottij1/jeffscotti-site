---
import jsHeadshot from "../assets/js-headshot.png";
import resumePdf from "../assets/jeffscotti_resume.pdf";
import Testimonials from "./Testimonials.astro";
---

<div class="welcome-container">
  <main class="main-content">
    <div class="home-content">
      <div class="two-column-layout">
        <div class="image-column">
          <div class="home-photo">
            <div
              class="hp-inner"
              style={`background-image: url(${jsHeadshot.src});`}
            >
            </div>
          </div>
        </div>

        <div class="text-column">
          <h1 class="name">Jeff Scotti</h1>
          <h4 class="job-title">
            Senior Front End Engineer & Senior UI/UX Designer
          </h4>
          <p class="bio">
            I build intuitive, high-performance web applications by combining
            clean, efficient code with thoughtful design. With 15+ years of
            experience, I specialize in crafting scalable user interfaces,
            leading technical projects, and enhancing digital experiences
            through modern web technologies, front-end frameworks, and UX best
            practices.
          </p>

          <div class="home-buttons">
            <a href={resumePdf} class="btn" target="_blank">
              <i class="fa-solid fa-file-pdf"></i> Resume
            </a>
            <a
              href="https://linkedin.com/in/jeffscotti"
              target="_blank"
              class="btn"
            >
              <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <a href="https://github.com/scottij1" target="_blank" class="btn">
              <i class="fab fa-github"></i> GitHub
            </a>
            <a href="/contact" class="btn">
              <i class="fas fa-envelope"></i> Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <div class="testimonials-section">
    <Testimonials title="What People Say" />
  </div>
</div>

<style>
  .welcome-container {
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .testimonials-section {
    padding: 60px 0;
    width: 100%;
  }

  .main-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .home-content {
    width: 100%;
    max-width: 1200px;
  }

  .two-column-layout {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .image-column {
    flex: 0 0 30%;
    padding: 15px;
    display: flex;
    justify-content: center;
  }

  .text-column {
    flex: 0 0 70%;
    padding: 15px;
  }

  .home-photo {
    display: block;
    position: relative;
    width: 262px;
    height: 262px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #444;
    border: 18px solid #444;
  }

  .hp-inner {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  .job-title {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 10px;
  }

  .name {
    font-size: 48px;
    line-height: 56px;
    margin-top: 0;
    font-weight: 600;
    margin-bottom: 0;
  }

  .bio {
    font-size: 16px;
    margin-bottom: 20px;
    line-height: 1.75;
    padding: 10px 10% 10px 0;
  }

  .home-buttons {
    margin-top: 25px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  /* Common button style based on GitHub button */
  .btn {
    display: inline-block;
    position: relative;
    padding: 0.8em 1.5em;
    margin-bottom: 0.75em;
    margin-right: 0.25em;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.2;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    border-radius: 30px;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 10px 10px -8px rgba(0, 0, 0, 0.22);
    text-decoration: none;
    color: #fff;
    border: 2px solid;
    background-color: #333;
    border-color: #333;
  }

  .btn:hover {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
  }

  /* Media queries */
  @media screen and (max-width: 768px) {
    .two-column-layout {
      flex-direction: column;
    }

    .image-column,
    .text-column {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .home-buttons {
      justify-content: center;
    }

    .btn {
      width: 100%;
    }

    .bio {
      padding-right: 0;
    }
  }
</style>
