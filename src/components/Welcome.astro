---
import jsHeadshot from "../assets/js-headshot.png";
import resumePdf from "../assets/jeffscotti_resume.pdf";
import resumeDocx from "../assets/jeffscotti_resume.docx?url";
---

<div class="welcome-container">
  <main class="main-content">
    <div class="home-content">
      <div class="two-column-layout">
        <div class="image-column">
          <div class="home-photo">
            <div
              class="hp-inner"
              style={`background-image: url(${jsHeadshot.src});`}
            >
            </div>
          </div>
        </div>

        <div class="text-column">
          <h1 class="name">Jeff Scotti</h1>
          <h4 class="job-title">
            {
              " Senior Front End Engineer & Senior UI/UX Designer"
                .split("")
                .map((char) => <span class="char">{char}</span>)
            }
          </h4>
          <p class="bio">
            I build intuitive, high-performance web applications by combining clean, efficient code
            with thoughtful design. With 15+ years of experience, I specialize in crafting scalable
            user interfaces, leading technical projects, and enhancing digital experiences through
            modern web technologies, front-end frameworks, and UX best practices.
          </p>

          <div class="home-buttons">
            <div class="dropdown">
              <button class="btn dropdown-toggle">
                <i class="fa-solid fa-file"></i>
                <span>Resume</span>
                <i class="fa-solid fa-chevron-down"></i>
              </button>
              <div class="dropdown-menu">
                <div class="mobile-menu-header">
                  <h3>Resume Options</h3>
                  <button class="mobile-close-btn">
                    <i class="fa-solid fa-times"></i>
                  </button>
                </div>
                <a
                  href={resumePdf}
                  class="dropdown-item"
                  target="_blank"
                >
                  <i class="fa-solid fa-file-pdf"></i>
                  <span>PDF Version</span>
                </a>
                <a
                  href={resumeDocx}
                  class="dropdown-item"
                  target="_blank"
                >
                  <i class="fa-solid fa-file-word"></i>
                  <span>Word Version</span>
                </a>
              </div>
            </div>
            <a
              href="https://linkedin.com/in/jeffscotti"
              target="_blank"
              class="btn"
            >
              <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <a
              href="https://github.com/scottij1"
              target="_blank"
              class="btn"
            >
              <i class="fab fa-github"></i> GitHub
            </a>
            <a
              href="mailto:jeff@jeffscotti.net"
              class="btn"
            >
              <i class="fas fa-envelope"></i> Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<style>
  .welcome-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 5rem 0 7.5rem 0;
  }

  .testimonials-section {
    padding: 60px 0;
    width: 100%;
  }

  .main-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .home-content {
    width: 100%;
    max-width: 1200px;
  }

  .two-column-layout {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .image-column {
    flex: 0 0 30%;
    padding: 15px;
    display: flex;
    justify-content: center;
  }

  .text-column {
    flex: 0 0 70%;
    padding: 15px;
  }

  .home-photo {
    display: block;
    position: relative;
    width: 262px;
    height: 262px;
    border-radius: 50%;
    overflow: hidden;
    background-color: var(--border-color);
    border: 10px solid var(--border-color);
  }

  .hp-inner {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  .job-title {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 10px;
  }

  .name {
    font-size: 48px;
    line-height: 56px;
    margin-top: 0;
    font-weight: 600;
    margin-bottom: 0;
  }

  .bio {
    font-size: 16px;
    margin-bottom: 20px;
    line-height: 1.75;
    padding: 10px 10% 10px 0;
  }

  .home-buttons {
    margin-top: 25px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  /* Dropdown styles */
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-toggle {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    min-width: 200px;
    background-color: var(--container-bg-color);
    border-radius: 8px;
    padding: 8px 0;
    z-index: 1000;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .mobile-menu-header {
    display: none;
    padding: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    justify-content: space-between;
    align-items: center;
  }

  .mobile-menu-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 500;
  }

  .mobile-close-btn {
    background: none;
    border: none;
    color: var(--heading-color);
    font-size: 20px;
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .mobile-close-btn:hover {
    color: var(--primary-color);
  }

  /* Bridge element to maintain hover */
  .dropdown::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 8px; /* Same as gap to dropdown menu */
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    color: var(--heading-color);
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .dropdown-item:hover {
    background-color: var(--primary-color);
  }

  /* Media queries */
  @media screen and (max-width: 768px) {
    .two-column-layout {
      flex-direction: column;
    }

    .image-column,
    .text-column {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .home-buttons {
      justify-content: center;
    }

    .btn {
      width: 100%;
    }

    .bio {
      padding-right: 0;
    }

    .name,
    .job-title {
      text-align: center;
    }

    .name {
      margin-bottom: 10px;
    }

    .dropdown {
      width: 100%;
    }

    .dropdown-toggle {
      justify-content: center;
      text-align: center;
    }

    /* Hide chevron icon on mobile */
    .dropdown-toggle .fa-chevron-down {
      display: none;
    }

    /* Mobile dropdown menu styles - matching site-nav */
    .dropdown-menu {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: rgba(var(--bg-color-rgb, 17, 17, 17), 0.95);
      backdrop-filter: blur(5px);
      z-index: 2000;
      padding: 0;
      border-radius: 0;
      box-shadow: none;
      transform: translateX(100%);
      transition: transform 0.2s ease-in-out;
      flex-direction: column;
      overflow-y: auto;
    }

    .dropdown-menu.active {
      display: flex;
      transform: translateX(0);
    }

    .dropdown-menu.closing {
      transform: translateX(100%);
    }

    .mobile-menu-header {
      display: flex;
      position: sticky;
      top: 0;
      background-color: var(--container-bg-color);
      z-index: 10;
    }

    .dropdown-item {
      padding: 16px;
      font-size: 18px;
    }

    /* Override hover behavior on mobile */
    .dropdown:hover .dropdown-menu {
      display: none;
    }

    .dropdown::after {
      display: none;
    }
  }
</style>

<script>
  import anime from "animejs";

  document.addEventListener("DOMContentLoaded", () => {
    // Job title animation
    anime({
      targets: ".job-title .char",
      opacity: [0, 1],
      translateY: [50, 0],
      scale: [0.3, 1],
      easing: "easeOutExpo",
      duration: 500,
      delay: (el, i) => 50 * i,
    });

    // Mobile menu functionality
    const isMobile = () => window.innerWidth <= 768;
    const dropdownToggle = document.querySelector(".dropdown-toggle") as HTMLButtonElement | null;
    const dropdownMenu = document.querySelector(".dropdown-menu") as HTMLDivElement | null;
    const closeButton = document.querySelector(".mobile-close-btn") as HTMLButtonElement | null;
    const menuItems = document.querySelectorAll(".dropdown-item") as NodeListOf<HTMLAnchorElement>;

    // Function to handle menu opening
    const openMobileMenu = (e: Event) => {
      if (isMobile() && dropdownMenu) {
        e.preventDefault();
        e.stopPropagation();

        // First set display to flex, then add active class for animation
        dropdownMenu.style.display = "flex";

        // Force a reflow to ensure the display change takes effect before adding the class
        void dropdownMenu.offsetWidth;

        dropdownMenu.classList.add("active");
        document.body.style.overflow = "hidden"; // Prevent scrolling when menu is open
      }
    };

    // Function to handle menu closing
    const closeMobileMenu = (e: Event) => {
      if (isMobile() && dropdownMenu && dropdownMenu.classList.contains("active")) {
        e.preventDefault();
        e.stopPropagation();

        // Add closing class for slide-out animation
        dropdownMenu.classList.add("closing");
        dropdownMenu.classList.remove("active");

        // Wait for animation to complete before hiding
        setTimeout(() => {
          if (dropdownMenu) {
            dropdownMenu.classList.remove("closing");
            dropdownMenu.style.display = "none";
            document.body.style.overflow = ""; // Restore scrolling
          }
        }, 200); // Match the site-nav transition duration (0.2s)
      }
    };

    // Add event listeners for mobile
    if (dropdownToggle && dropdownMenu && closeButton) {
      // Use click instead of hover for mobile
      dropdownToggle.addEventListener("click", openMobileMenu);
      closeButton.addEventListener("click", closeMobileMenu);

      // Close menu when an option is clicked
      menuItems.forEach((item) => {
        item.addEventListener("click", () => {
          if (isMobile()) {
            // We don't prevent default here to allow the link to work
            // Just close the menu after the link is clicked
            if (dropdownMenu && dropdownMenu.classList.contains("active")) {
              dropdownMenu.classList.add("closing");
              dropdownMenu.classList.remove("active");

              setTimeout(() => {
                if (dropdownMenu) {
                  dropdownMenu.classList.remove("closing");
                  dropdownMenu.style.display = "none";
                  document.body.style.overflow = ""; // Restore scrolling
                }
              }, 200); // Match the site-nav transition duration (0.2s)
            }
          }
        });
      });

      // Handle window resize
      window.addEventListener("resize", () => {
        if (!isMobile() && dropdownMenu && dropdownMenu.classList.contains("active")) {
          dropdownMenu.classList.remove("active", "closing");
          dropdownMenu.style.display = "";
          document.body.style.overflow = "";
        }
      });
    }
  });
</script>
