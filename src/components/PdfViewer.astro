---
interface Props {
  pdfUrl: string;
  projectId: string;
}

const {pdfUrl, projectId} = Astro.props;
---

<div class="pdf-viewer-container" id={`pdf-viewer-${projectId}`}>
  <div class="pdf-wrapper">
    <object data={pdfUrl} type="application/pdf" width="100%" height="100%" class="pdf-object">
      <p>
        It appears your browser doesn't support embedded PDFs.
        <a href={pdfUrl} target="_blank">Click here to download the PDF</a>.
      </p>
    </object>
  </div>
</div>

<style>
  .pdf-viewer-container {
    width: 100%;
    height: 100%;
    position: relative;
    background-color: var(--container-bg-color);
    border-radius: 8px;
    overflow: hidden;
  }

  .pdf-wrapper {
    width: 100%;
    height: 600px;
    overflow: auto;
    display: flex;
    justify-content: center;
    background-color: #525659;
  }

  .pdf-object {
    border: none;
    width: 100%;
    height: 100%;
  }

  .pdf-error {
    color: white;
    text-align: center;
    padding: 20px;
  }

  .pdf-error a {
    color: var(--primary-color);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .pdf-wrapper {
      height: 400px;
    }
  }
</style>

<script>
  // PDF.js handles all controls and interactions
</script>
